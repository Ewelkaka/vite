{
  "pnpm": {
    "overrides": {
      "vite": "./packages/vite",
      "@vitejs/plugin-legacy": "./packages/plugin-legacy"
    }
  }
}
{
  "version": 1,
  "commands": {
    "build": "pnpm run build",
    "test": "pnpm run test",
    "lint": "pnpm run lint",
    "format": "pnpm run format"
  },
  "tasks": {
    "build": {
      "script": "vite build"
    },
    "test": {
      "script": "vitest"
    },
    "lint": {
      "script": "eslint . --ext .ts,.js,.vue"
    },
    "format": {
      "script": "prettier --write ."
    }
  }
}                                                                                                                                                                                                                                                                                                                                             